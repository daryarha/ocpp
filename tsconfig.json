{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@handlers/*": ["handlers/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@router/*": ["router/*"],
      "@core/*": ["core/*"],
      "@validation/*": ["validation/*"],
      "@type/*": ["types/*"]
    }
  }
}
